# SOFIYA Backend Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/sofiya_db
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Google Cloud Services
GOOGLE_APPLICATION_CREDENTIALS=path/to/google-credentials.json
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# OpenAI (for AI responses)
OPENAI_API_KEY=your-openai-api-key

# WhatsApp Integration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Smart Home APIs
GOOGLE_HOME_API_KEY=your-google-home-api-key
ALEXA_SKILL_ID=your-alexa-skill-id
IFTTT_WEBHOOK_KEY=your-ifttt-webhook-key

# Health/Wearable APIs
FITBIT_CLIENT_ID=your-fitbit-client-id
FITBIT_CLIENT_SECRET=your-fitbit-client-secret
GOOGLE_FIT_CLIENT_ID=your-google-fit-client-id
GOOGLE_FIT_CLIENT_SECRET=your-google-fit-client-secret

# External APIs
NEWS_API_KEY=your-newsapi-key
OPENWEATHER_API_KEY=your-openweather-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-optional
